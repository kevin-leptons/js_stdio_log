{
    "compilerOptions": {
        "outDir": "target/build",
        "removeComments": true,
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "rootDir": "source",
        "strictNullChecks": true
    },
    "include": [
        "source/lib/*.ts",
        "source/test/*.ts"
    ]
}
